<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.birds.mapper.FriendsCircleMapper">

    <select id="findFriendsCircles" resultType="com.birds.pojo.FriendsCircle" parameterType="java.util.Map">
        select *
        from friends_circle
        where 1 = 1
        <if test="id != null">and `id` = '${id}'</if>
        <if test="uId != null">and `u_id` = '${uId}'</if>
        <if test="isDelete != null">and `is_delete` = '${isDelete}'</if>
        <if test="like != null">and `like` >= '${like}'</if>
        <if test="createAt != null">and `createAt` >= '${createAt}'</if>
    </select>


    <select id="findFriendsCircleByUid" resultType="com.birds.pojo.FriendsCircle" parameterType="java.lang.Integer">
        select *
        from friends_circle
        where is_delete = 1 and u_id = #{0}
    </select>


